<resources>

    <style name="Widget.Gateway.AppBar" parent="Widget.MaterialComponents.AppBarLayout.Surface">
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Gateway.Toolbar" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Gateway.ToolbarNavigationButton" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?colorOnSurface</item>
    </style>

    <style name="Widget.Gateway.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textAppearance">@style/TextAppearance.Gateway.Body</item>
        <item name="android:textColor">@null</item>
    </style>

    <style name="Widget.Gateway.ToolbarTitle" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textAppearance">?titleTextAppearance</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Widget.Gateway.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0.025</item>
    </style>

    <style name="Widget.Gateway.Button.Outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?colorOnSurface</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Widget.Gateway.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">?colorOnBackground</item>
    </style>

    <style name="Widget.Gateway.Button.Text.Tertiary" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/relaynet_tertiary</item>
    </style>

    <style name="Widget.Gateway.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@null</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Dialog -->

    <style name="Widget.Gateway.DialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="Widget.Gateway.DialogButton.Positive" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="Widget.Gateway.DialogButton.Negative" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">?colorOnSurface</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <!-- Card -->

    <style name="Widget.Gateway.Card" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="strokeColor">?colorPrimary</item>
        <item name="strokeWidth">1dp</item>
    </style>

</resources>
